

<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="field form-group">
    <%= f.input :name, class: "form-control", placeholder: "Doge" %>
    <%= f.input :address, class: "form-control", placeholder: "100 Magazine St \nNew Orleans, LA 70115" %>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, {prompt: "Select a payment type"}, {class: "form-control"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Place Order", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
